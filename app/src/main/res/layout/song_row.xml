<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="10">
        <ImageView
            android:layout_weight="2"
            android:id="@+id/imageViewCoverSongRow"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="65dp"
            android:src="@drawable/ashes_pic_png"/>

        <LinearLayout
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:textSize="20dp"
                android:id="@+id/textSongTitleSongRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="A ky full of star"
                android:textColor="#fff" />
            <TextView
                android:textSize="16dp"
                android:id="@+id/textSongArtistSongRow"
                android:text="Coldplay"
                android:textColor="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonSettingSongRow"
            android:src="@drawable/ic_setting"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>





</LinearLayout>